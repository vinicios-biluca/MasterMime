<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mastermime.cretecstudios.com.mastermime.ActivityNewMatch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:orientation="vertical"
        android:padding="15dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova Partida"
            android:theme="@style/MyLabel" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo da jogada: 90s"
            android:textSize="25dp"
            android:theme="@style/MyLabel" />

        <SeekBar
            android:id="@+id/sb_time"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:max="3"
            android:progress="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipe 1:"
            android:textSize="25dp"
            android:theme="@style/MyLabel" />

        <EditText
            android:id="@+id/edt_equipe1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Digite  o Nome da Equipe 1"
            android:inputType="textPersonName"
            android:paddingRight="15dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipe 2:"
            android:textSize="25dp"
            android:theme="@style/MyLabel" />

        <EditText
            android:id="@+id/edt_equipe2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Digite o Nome da Equipe 2"
            android:inputType="textPersonName"
            android:paddingRight="15dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="5dp">


            <Button
                android:id="@+id/bt_cancel_match"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/cancel_icon"
                android:theme="@style/MyButton" />

            <Button
                android:id="@+id/bt_ok_match"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/ok_icon"
                android:theme="@style/MyButton" />
        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>



